# Levi Configuration
# Copy this to .env and fill in your values

# Application
DEBUG=false

# Timezone (use TZ database name)
TIMEZONE=America/New_York
USDA_ZONE=9b

# Your location (for sunrise/sunset calculations)
LATITUDE=28.5383
LONGITUDE=-81.3792

# Ambient Weather Network API
# Get these from: https://ambientweather.net/account
AWN_API_KEY=your_api_key_here
AWN_APP_KEY=your_application_key_here
WEATHER_POLL_INTERVAL=300

# Email Notifications (Gmail example)
# For Gmail: Enable 2FA and create an App Password
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=Levi Farm Assistant <your_email@gmail.com>
NOTIFICATION_EMAIL=your_email@gmail.com

# Alert Thresholds (Fahrenheit / mph / inches)
FROST_WARNING_TEMP=35.0
FREEZE_WARNING_TEMP=32.0
HEAT_WARNING_TEMP=95.0
WIND_WARNING_SPEED=25.0
RAIN_WARNING_INCHES=2.0
